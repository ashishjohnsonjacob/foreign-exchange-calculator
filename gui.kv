BoxLayout:
    orientation: 'vertical'
    Label:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        font_size: 25
        color: 0,0,0,1
        size_hint_y: 0.8
        id: current_location
        halign: 'center'
    GridLayout:
        size_hint_y: 0.3
        cols: 2
        Spinner:
            text: 'Select Country '
            id: spinner_selection
            values: app.name_country
            on_text: app.set_selected_country()
        TextInput:
            input_filter: 'int'
            multiline: False
            id: input_selected
            on_text: app.status_bar_clear()
            on_text_validate: app.convert_selected_to_home()
        Label:
            text: app.home_country
        TextInput:
            input_filter: 'int'
            multiline: False
            id: input_home
            on_text: app.status_bar_clear()
            on_text_validate: app.convert_home_to_selected()
    Label:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        font_size: 40
        color: 0,0,0,1
        id: date
        halign: 'center'
    GridLayout:
        size_hint_y: 0.3
        cols: 2
        Label:
            id: status_bar
            text: app.status_bar_text
        Button:
            text: 'UPDATE CURRENCY'
            on_press: app.updated()